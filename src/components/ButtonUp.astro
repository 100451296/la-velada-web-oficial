<div class="containerButton">
	<button id="goToTopBtn">
		<svg
			stroke-width="2"
			stroke="currentColor"
			viewBox="0 0 24 24"
			fill="none"
			class="h-6 w-6"
			xmlns="http://www.w3.org/2000/svg"
			width="20px"
		>
			<path d="M14 5l7 7m0 0l-7 7m7-7H3" stroke-linejoin="round" stroke-linecap="round"></path>
		</svg>
	</button>
</div>

<style>
	.containerButton {
		position: fixed;
		right: 20px;
		bottom: 20px;
		z-index: 999; /* Asegura que el botón esté por encima de otros elementos */
	}

	button {
		width: 50px;
		height: 50px;
		overflow: hidden;
		border-radius: 100%;
		color: var(--color-primary);
		background: none;
		position: relative;
		cursor: pointer;
		border: 1px solid var(--color-primary);
		border-radius: 10px;
		background: var(--color-secondary);
	}

	button:hover {
		transform: translateY(-0.33em);
		box-shadow: 0px 0px 15px 0px var(--color-primary);
	}

	button:active {
		transform: translateY(0);
	}

	button > svg {
		position: absolute;
		width: 100%;
		height: 100%;
	}

	/* icon style and hover */
	button svg {
		width: 35px;
		right: 15%;
		top: 50%;
		transform: translateY(-50%) rotate(-50deg);
		transition: 0.2s ease-out;
	}

	button:hover svg {
		transform: translateY(-50%) rotate(-90deg);
	}
</style>

<script>
	const goToTop = () => {
		document.body.scrollTop = 0 // Para navegadores antiguos
		document.documentElement.scrollTop = 0 // Para navegadores modernos
	}

	window.onscroll = () => {
		scrollFunction()
	}

	const scrollFunction = () => {
		const btnUp = document.getElementById("goToTopBtn")
		const scrollPosition = window.scrollY || document.documentElement.scrollTop

		const halfWindowHeight = window.innerHeight / 2

		if (scrollPosition > halfWindowHeight) {
			btnUp.style.display = "block"
			btnUp.addEventListener("click", goToTop)
		} else {
			btnUp.style.display = "none"
		}
	}
</script>
