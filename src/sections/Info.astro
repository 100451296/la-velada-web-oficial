---
import TwitchLogo from "@/components/TwitchLogo.astro"
import Typography from "@/components/Typography.astro"
---

<section
	class="group mb-32 mt-80 flex w-full flex-col items-center justify-center px-20 font-medium text-primary"
	aria-label="descripciÃ³n del evento"
>
	<hr
		class="-z-10 -mt-12 h-[2px] min-w-[20rem] border-t-0 bg-transparent bg-gradient-to-r from-transparent via-white to-transparent sm:w-full sm:max-w-64 md:max-w-lg"
	/>
	<a
		href="https://twitch.tv/ibai"
		target="_blank"
		rel="nofollow noopener"
		class="group/twitch mx-auto -mt-11 mb-8"
		aria-hidden="true"
		tabindex="-1"
		title="Enlace al canal de Twitch de Ibai Llanos"
	>
		<div
			class="mx-auto -mt-1 mb-8 w-14 duration-200 group-hover/twitch:scale-110 motion-safe:transition md:w-20"
		>
			<TwitchLogo />
		</div>

		<div class="duration-200 group-hover/twitch:scale-110 motion-safe:transition">
			<span
				class="block -rotate-6 skew-x-6 text-center font-atomic text-xl text-white underline-offset-8 transition sm:text-3xl md:text-5xl"
				>en directo
			</span>
			<Typography
				as="h2"
				variant="bigger"
				color="primary"
				class:list={"-mt-2 text-wrap text-center"}
				class="flex justify-center transition"
			>
				twitch.tv/ibai
			</Typography>
		</div>
	</a>
	<hr
		class="my-12 h-[2px] min-w-[20rem] border-t-0 bg-transparent bg-gradient-to-r from-transparent via-white to-transparent sm:w-full sm:max-w-64 md:max-w-lg"
	/>
</section>
